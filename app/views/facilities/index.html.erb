<h1>Listing facilities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Addr</th>
    <th>Tel</th>
    <th>Lat</th>
    <th>Lon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.name %></td>
    <td><%= facility.type %></td>
    <td><%= facility.addr %></td>
    <td><%= facility.tel %></td>
    <td><%= facility.lat %></td>
    <td><%= facility.lon %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

